{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015","es2018", "dom"],
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}